# Example Custom Configuration
# Copy this file to variables.auto.pkrvars.hcl and customize for your needs
# Files with .auto.pkrvars.hcl extension are automatically loaded by Packer

# VM Resource Settings
# vm_memory = 4096  # Increase to 4GB RAM
# vm_cpus   = 4     # Increase to 4 CPU cores

# VM Identification
# vm_name      = "my_custom_vm"     # Custom VM name
# vm_hostname  = "my-hostname"      # Custom hostname

# User Account Settings
# ssh_username = "myuser"           # Custom username
# ssh_password = "changeme"         # Remember to change after first login!

# Build Settings - Advanced
# output_dir      = "my-build-output"  # Custom output directory
# headless        = false              # Show VM GUI during build
# ssh_timeout     = "20m"              # Increase timeout for slower systems
